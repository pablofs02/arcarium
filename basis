#!/bin/sh

arranque="$1"
usuario="$2"
dispositivo="$3"
csa="$4"
csu="$5"
controlador="$6"

whiptail --infobox "Montando sistema de arranque." 10 60
mkdir -p /boot/efi
mount "/dev/$arranque" /boot/efi

whiptail --infobox "Instalando gestor de arranque." 10 60
grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=GRUB >/dev/null
grub-mkconfig -o /boot/grub/grub.cfg >/dev/null

whiptail --infobox "Configuración base." 10 60
echo "es_ES.UTF-8 UTF-8" >> /etc/locale.gen
locale-gen
echo "LANG=es_ES.UTF-8" > /etc/locale.conf
echo "KEYMAP=es" >> /etc/vconsole.conf
ln -sf /usr/share/zoneinfo/Europe/Madrid /etc/localtime
hwclock --systohc
echo "$dispositivo" > /etc/hostname
echo "127.0.0.1    localhost
::1          localhost
127.0.1.1    $dispositivo.localdomain    localhost" >> /etc/hosts

useradd -mG wheel,storage,power,audio,video "$usuario"
echo -e "$csa\n$csa" | passwd
echo -e "$csu\n$csu" | passwd "$usuario"

systemctl enable dhcpcd.service >/dev/null
systemctl enable NetworkManager.service >/dev/null

[ "$controlador" = "1" ] && pacman -S --noconfirm nvidia-open nvidia-utils nvidia-settings nvidia-prime >/dev/null &
[ "$controlador" = "2" ] && pacman -S --noconfirm xf86-video-intel mesa >/dev/null &
[ "$controlador" = "3" ] && pacman -S --noconfirm xf86-video-amdgpu mesa >/dev/null &

whiptail --infobox "Configurando sonido." 10 60
su "$usuario" -c "systemctl --user enable pipewire.socket >/dev/null"
su "$usuario" -c "systemctl --user enable pipewire-pulse.socket >/dev/null"
su "$usuario" -c "systemctl --user enable wireplumber.service >/dev/null"

whiptail --infobox "Configurando shell." 10 60
ln -sf /bin/dash /bin/sh
chsh -s /usr/bin/zsh >/dev/null
echo -e "$csu" | su "$usuario" -c "chsh -s /usr/bin/zsh"

#printf "\033[34m>>> INSTALANDO GESTOR DE CLAVES\033[m\n"
#pacman -S --noconfirm gnome-keyring seahorse
whiptail --infobox "Instalando rust." 10 60
# -----------------------------------------------no se instaló
su "$usuario" -c "rustup default stable >/dev/null"
#printf "\033[34m>>> INSTALANDO EDITORES\033[m"
#pacman -S --noconfirm gimp blender inkscape >/dev/null
#printf "\033[34m>>> INSTALANDO PAMPLINAS\033[m"
#pacman -S --noconfirm termdown cmatrix >/dev/null
# dbus-python para script

# -----------------------------------------------no se instaló
whiptail --infobox "Bajando repositorios propios." 10 60
git clone https://aur.archlinux.org/paru.git &>/dev/null
git clone https://github.com/pablofs02/st &>/dev/null
git clone https://github.com/pablofs02/dwm &>/dev/null
git clone https://github.com/pablofs02/dmenu &>/dev/null
git clone https://github.com/pablofs02/sent &>/dev/null
cd paru
su "$usuario" -c makepkg >/dev/null
cd ../st
make install >/dev/null
cd ../dwm
make install >/dev/null
cd ../dmenu
make install >/dev/null
cd ../sent
make install >/dev/null
cd ..
rm -rf st dmenu dwm sent paru

rm /instalador

whiptail --infobox "Esperando a que se terminen de descargar el controlador." 10 60
wait

whiptail --msgbox "Arcarium instalado.\n\nBienvenido a tu nuevo sistema operativo LIBRE." 10 60
